<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <property name="autoIncrement" value="true"/>

    <changeSet id="0003" author="alice">

        <createTable tableName="department">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="bigint">
                <constraints nullable="false"></constraints>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="varchar(50)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="manager_id" type="bigint">
                <constraints foreignKeyName="fk_department_employee_id" nullable="true" referencedTableName="employee" referencedColumnNames="id"></constraints>
            </column>
            <column name="company_id" type="bigint">
                <constraints foreignKeyName="fk_employee_company_id" nullable="false" referencedTableName="company" referencedColumnNames="id"></constraints>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>